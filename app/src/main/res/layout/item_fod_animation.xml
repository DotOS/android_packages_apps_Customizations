<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/fodCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fod_picker_item_size"
        app:cardBackgroundColor="@android:color/black"
        app:cardCornerRadius="@dimen/default_dialog_radius_round"
        app:cardElevation="0dp"
        app:strokeColor="@color/colorPrimaryBackground"
        app:strokeWidth="2dp">

        <LinearLayout
            android:id="@+id/fodLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/fodIcon"
                android:layout_width="@dimen/fod_picker_item_size"
                android:layout_height="@dimen/fod_picker_item_size"
                android:contentDescription="@null"
                android:padding="10dp"
                android:scaleType="centerInside" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>