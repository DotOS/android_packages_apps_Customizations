<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom">

    <com.dot.ui.ExpandableLayout
        android:id="@+id/wp_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:el_expanded="true">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/recyclerSpacer"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="@dimen/default_dialog_radius_round">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/cardBackground"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/wp_apply_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_margin="@dimen/recyclerSpacerBigger"
                        android:padding="4dp"
                        app:srcCompat="@drawable/ic_phone"
                        app:tint="?android:attr/textColorPrimary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/recyclerSpacer"
                            android:text="Home Screen"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.1"
                    android:background="?attr/colorOnSurface" />

                <LinearLayout
                    android:id="@+id/wp_apply_lockscreen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_margin="@dimen/recyclerSpacerBigger"
                        android:padding="4dp"
                        app:srcCompat="@drawable/ic_lock"
                        app:tint="?android:attr/textColorPrimary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/recyclerSpacer"
                            android:text="Lock Screen"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.1"
                    android:background="?attr/colorOnSurface" />

                <LinearLayout
                    android:id="@+id/wp_apply_both"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_margin="@dimen/recyclerSpacerBigger"
                        android:padding="4dp"
                        app:srcCompat="@drawable/ic_wallpaper"
                        app:tint="?android:attr/textColorPrimary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Both"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="18sp"
                            android:paddingEnd="@dimen/recyclerSpacer" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/recyclerSpacer"
                            android:text="@string/apply_both"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </com.dot.ui.ExpandableLayout>
</FrameLayout>