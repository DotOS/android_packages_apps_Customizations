<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/accButton"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_margin="12dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_qs_frame_button" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_margin="12dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_qs_frame" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/accHeader"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_margin="12dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_qs_frame_accent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/accElem"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_margin="12dp"
            android:adjustViewBounds="true"
            android:foreground="@drawable/header_gradient"
            app:srcCompat="@drawable/ic_qs_frame_elements" />
    </FrameLayout>

    <com.android.settings.dotextras.custom.views.ContextSectionLayout
        android:id="@+id/sectionQS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sectionTitle="@string/options" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <com.android.settings.dotextras.custom.views.ContextSectionLayout
        android:id="@+id/sectionRows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sectionTitle="@string/rows_amp_columns" />
</LinearLayout>