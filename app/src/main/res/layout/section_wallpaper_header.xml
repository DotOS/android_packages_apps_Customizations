<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minHeight="@dimen/default_header_height"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/detailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_card_width_with_spacing"
            android:minHeight="@dimen/default_header_height"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_wallpaper"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView6"
                android:layout_marginTop="4dp"
                android:text="@string/image_color_s"
                android:textSize="16sp" />

            <include
                layout="@layout/item_wallpaper_colors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView7"
                android:layout_marginTop="6dp" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/currWallCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/detailsLayout"
            android:layout_alignBottom="@id/detailsLayout"
            android:minHeight="@dimen/default_header_height"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/myWallpaper"
                android:layout_width="@dimen/small_card_width"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:minHeight="@dimen/default_header_height"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="18dp"
        android:paddingTop="14dp"
        android:paddingEnd="18dp"
        android:paddingBottom="14dp"
        android:text="@string/my_photos"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="22sp" />

    <ImageButton
        android:layout_width="@dimen/small_card_width"
        android:layout_height="@dimen/small_card_height"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_bg"
        android:contentDescription="@null"
        android:tint="?android:attr/textColorPrimary"
        app:srcCompat="@drawable/ic_add" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="18dp"
        android:paddingTop="14dp"
        android:paddingEnd="18dp"
        android:paddingBottom="14dp"
        android:text="@string/built_in_wallpapers"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="22sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/builtInRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="18dp"
        android:paddingTop="14dp"
        android:paddingEnd="18dp"
        android:paddingBottom="14dp"
        android:text="@string/live_wallpapers"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="22sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/liveRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>