<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_card_width">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/default_size_icon"
                android:layout_height="@dimen/default_size_icon"
                android:background="@drawable/circle_bg"
                android:backgroundTint="?android:attr/textColorSecondaryInverse"
                android:contentDescription="@null"
                android:padding="12dp"
                app:srcCompat="@drawable/statusbar_icon0"
                app:tint="?android:attr/textColorPrimary" />

            <ImageView
                android:layout_width="@dimen/default_size_icon"
                android:layout_height="@dimen/default_size_icon"
                android:layout_marginStart="16dp"
                android:background="@drawable/circle_bg"
                android:backgroundTint="?android:attr/textColorSecondaryInverse"
                android:contentDescription="@null"
                android:padding="12dp"
                app:srcCompat="@drawable/statusbar_icon1"
                app:tint="?android:attr/textColorPrimary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:fitsSystemWindows="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/default_size_icon"
                android:layout_height="@dimen/default_size_icon"
                android:background="@drawable/circle_bg"
                android:backgroundTint="?android:attr/textColorSecondaryInverse"
                android:contentDescription="@null"
                android:padding="12dp"
                app:srcCompat="@drawable/qs_icon0"
                app:tint="?android:attr/textColorPrimary" />

            <ImageView
                android:layout_width="@dimen/default_size_icon"
                android:layout_height="@dimen/default_size_icon"
                android:layout_marginStart="16dp"
                android:background="@drawable/circle_bg"
                android:backgroundTint="?android:attr/textColorSecondaryInverse"
                android:contentDescription="@null"
                android:padding="12dp"
                app:srcCompat="@drawable/qs_icon1"
                app:tint="?android:attr/textColorPrimary" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>