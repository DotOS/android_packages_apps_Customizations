<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/small_card_width"
        android:layout_height="@dimen/small_card_height"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/colorPrimaryBackground"
        app:cardCornerRadius="@dimen/default_dialog_radius"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/shapeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/fontHeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/headline_01"
                android:textSize="18sp"/>

            <View
                android:id="@+id/fontDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                android:alpha="0.5"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/fontBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/body_02"
                android:textSize="16sp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/shapeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="google-sans-medium"
        android:gravity="center"
        android:lines="2"
        android:scrollbars="none"
        android:textAlignment="center"
        android:textSize="16sp"
        tools:text="Noto Serif\nSource Sans Pro" />

</LinearLayout>