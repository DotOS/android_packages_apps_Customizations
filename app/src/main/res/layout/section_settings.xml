<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.android.settings.dotextras.custom.views.DotMaterialPreference
        android:id="@+id/pref_rgb_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:checkable="true"
        android:icon="@drawable/ic_light_pulse"
        android:summary="Show RGB Picker for battery light states"
        android:title="RGB Battery Light" />

    <com.android.settings.dotextras.custom.views.DotMaterialPreference
        android:id="@+id/pref_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkable="true"
        android:checked="true"
        android:icon="@drawable/ic_error_round"
        android:summary="Allow dotOS to collect anonymous data like ROM version, device and country from your phone."
        android:tint="?android:attr/textColorPrimary"
        android:title="Enable Dot Stats"
        app:cardStyle="true" >

    </com.android.settings.dotextras.custom.views.DotMaterialPreference>

    <com.android.settings.dotextras.custom.views.DotMaterialPreference
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:summary="Check stats at stats.droidontime.com"
        app:url="https://stats.droidontime.com" />
</LinearLayout>