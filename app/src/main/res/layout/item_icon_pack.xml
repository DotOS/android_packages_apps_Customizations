<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/default_card_width"
        android:layout_height="@dimen/default_card_width"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/colorPrimaryBackground"
        app:cardCornerRadius="@dimen/default_dialog_radius"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/iconpack_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon0"
                    android:layout_width="@dimen/default_size_icon"
                    android:layout_height="@dimen/default_size_icon"
                    android:background="@drawable/circle_bg"
                    android:backgroundTint="?android:attr/textColorSecondaryInverse"
                    android:contentDescription="@null"
                    android:padding="12dp"
                    app:tint="?android:attr/textColorPrimary" />

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="@dimen/default_size_icon"
                    android:layout_height="@dimen/default_size_icon"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/circle_bg"
                    android:backgroundTint="?android:attr/textColorSecondaryInverse"
                    android:contentDescription="@null"
                    android:padding="12dp"
                    app:tint="?android:attr/textColorPrimary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:fitsSystemWindows="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="@dimen/default_size_icon"
                    android:layout_height="@dimen/default_size_icon"
                    android:background="@drawable/circle_bg"
                    android:backgroundTint="?android:attr/textColorSecondaryInverse"
                    android:contentDescription="@null"
                    android:padding="12dp"
                    app:tint="?android:attr/textColorPrimary" />

                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="@dimen/default_size_icon"
                    android:layout_height="@dimen/default_size_icon"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/circle_bg"
                    android:backgroundTint="?android:attr/textColorSecondaryInverse"
                    android:contentDescription="@null"
                    android:padding="12dp"
                    app:tint="?android:attr/textColorPrimary" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/iconPackLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="google-sans-medium"
        android:textAlignment="center"
        android:textSize="16sp"
        tools:text="Device default" />

</LinearLayout>