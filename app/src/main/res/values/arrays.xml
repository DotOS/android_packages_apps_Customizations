<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- BatteryMeterView parameters -->

    <!-- All of the paths defined for the batterymeter are defined on a 12x20 canvas, and must
     be parsable by android.utill.PathParser -->

    <!-- A dual tone battery meter draws the perimeter path twice - once to define the shape
     and a second time clipped to the fill level to indicate charge -->

    <!-- Hardware key rebinding -->
    <string-array name="hardware_keys_action_entries" translatable="false">
        <item>@string/hardware_keys_action_nothing</item>
        <item>@string/hardware_keys_action_menu</item>
        <item>@string/hardware_keys_action_app_switch</item>
        <item>@string/hardware_keys_action_search</item>
        <item>@string/hardware_keys_action_voice_search</item>
        <item>@string/hardware_keys_action_launch_camera</item>
        <item>@string/hardware_keys_action_sleep</item>
        <item>@string/hardware_keys_action_split_screen</item>
        <item>@*android:string/global_action_screenshot</item>
    </string-array>

    <!-- Hardware key rebinding for Go enabled devices -->
    <string-array name="hardware_keys_action_entries_go" translatable="false">
        <item>@string/hardware_keys_action_nothing</item>
        <item>@string/hardware_keys_action_menu</item>
        <item>@string/hardware_keys_action_app_switch</item>
        <item>@string/hardware_keys_action_search</item>
        <item>@string/hardware_keys_action_voice_search</item>
        <item>@string/hardware_keys_action_launch_camera</item>
        <item>@string/hardware_keys_action_sleep</item>
        <!--
        split-screen is not supported on Android Go devices
        <item>@string/hardware_keys_action_split_screen</item>
        -->
        <item>@*android:string/global_action_screenshot</item>
    </string-array>

    <integer-array name="hardware_keys_action_values" translatable="false">
        <item>0</item>
        <item>1</item>
        <item>2</item>
        <item>3</item>
        <item>4</item>
        <item>5</item>
        <item>6</item>
        <item>7</item>
        <item>8</item>
    </integer-array>

    <integer-array name="hardware_keys_action_values_go" translatable="false">
        <item>0</item>
        <item>1</item>
        <item>2</item>
        <item>3</item>
        <item>4</item>
        <item>5</item>
        <item>6</item>
        <!--
        split-screen is not supported on Android Go devices
        <item>7</item>
        -->
        <item>8</item>
    </integer-array>

    <!-- Volume key cursor control -->
    <string-array name="volbtn_cursor_control_entries" translatable="false">
        <item>@string/volbtn_cursor_control_off</item>
        <item>@string/volbtn_cursor_control_on</item>
        <item>@string/volbtn_cursor_control_on_reverse</item>
    </string-array>

    <integer-array name="volbtn_cursor_control_values" translatable="false">
        <item>0</item>
        <item>1</item>
        <item>2</item>
    </integer-array>

    <!-- Network Traffic -->
    <string-array name="network_traffic_mode_entries" translatable="false">
        <item>@string/network_traffic_mode_disable</item>
        <item>@string/network_traffic_mode_status_bar</item>
    </string-array>

    <integer-array name="network_traffic_mode_values" translatable="false">
        <item>0</item>
        <item>1</item>
    </integer-array>

    <string-array name="network_traffic_units_entries" translatable="false">
        <item>@string/network_traffic_units_bytes</item>
        <item>@string/network_traffic_units_bits</item>
    </string-array>

    <integer-array name="network_traffic_units_values" translatable="false">
        <item>0</item>
        <item>1</item>
    </integer-array>
</resources>