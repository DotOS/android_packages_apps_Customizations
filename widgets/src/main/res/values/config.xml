<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="widget_margin">0dp</dimen>

    <string name="android_s_organic_desc">Android S Organic Clock</string>

    <declare-styleable name="AppWidgetAttrs">
        <attr name="appWidgetPadding" format="dimension" />
        <attr name="appWidgetInnerRadius" format="dimension" />
        <attr name="appWidgetRadius" format="dimension" />
    </declare-styleable>

    <style name="AppTheme.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <item name="appWidgetRadius">24dp</item>
        <item name="appWidgetPadding">16dp</item>
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="AppTheme.AppWidgetContainer" parent="AppTheme.AppWidgetContainerParent" />

    <style name="Widget.Customizations.AppWidget.Container" parent="android:Widget">
        <item name="android:padding">?attr/appWidgetPadding</item>
    </style>

    <style name="Widget.Customizations.AppWidget.InnerView" parent="android:Widget">
        <item name="android:padding">?attr/appWidgetPadding</item>
    </style>

</resources>