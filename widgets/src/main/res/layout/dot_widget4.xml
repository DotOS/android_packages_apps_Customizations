<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#00000000"
    android:gravity="center"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin"
    app:layout_anchorGravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        android:background="@drawable/dot_widget4_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <TextClock
            android:id="@+id/week_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:allowUndo="false"
            android:format12Hour="EE d"
            android:format24Hour="EE d"
            android:rotationX="10"
            android:singleLine="true"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:allowUndo="false"
                android:format12Hour="hh"
                android:format24Hour="hh"
                android:singleLine="true"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textColor="@color/colorAccent"
                android:textSize="52sp"
                tools:text="12" />

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:allowUndo="false"
                android:format12Hour="mm"
                android:format24Hour="mm"
                android:singleLine="true"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textColor="@android:color/monet_clock_color_device_default"
                android:textSize="52sp"
                tools:text="00" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>